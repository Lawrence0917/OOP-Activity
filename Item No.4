<?php

class Vehicle {
    private $name;
    private $speed;
    private $mileage;

    public function __construct($name, $speed, $mileage) {
        $this->name = $name;
        $this->speed = $speed;
        $this->mileage = $mileage;
    }

    public function displayInfo() {
        echo "Vehicle: {$this->name}\n";
        echo "Speed: {$this->speed} km/h\n";
        echo "Mileage: {$this->mileage} km/l\n";
    }
}

class Bus extends Vehicle {
    public function seating_capacity($capacity = 50) {
        return "The seating capacity of this bus is {$capacity} passengers.";
    }
}

$car = new Vehicle("Toyota Corolla", 180, 14.5);
$car->displayInfo();

echo "\n";

$bus = new Bus("School Bus", 120, 10);
$bus->displayInfo();
echo $bus->seating_capacity() . "\n";  
echo $bus->seating_capacity(70) . "\n";  

?>
