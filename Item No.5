<?php

class Vehicle {
    private $name;
    private $speed;
    private $mileage;
    public static $color = "White"; 

    public function __construct($name, $speed, $mileage) {
        $this->name = $name;
        $this->speed = $speed;
        $this->mileage = $mileage;
    }

    public function displayInfo() {
        echo "Vehicle: {$this->name}\n";
        echo "Speed: {$this->speed} km/h\n";
        echo "Mileage: {$this->mileage} km/l\n";
        echo "Color: " . self::$color . "\n";
    }

    public static function getColor() {
        return self::$color;
    }

    public static function setColor($newColor) {
        self::$color = $newColor;
    }
}

class Bus extends Vehicle {
    public function seating_capacity($capacity = 50) {
        return "The seating capacity of this bus is {$capacity} passengers";
    }
}

class Car extends Vehicle {
}

$car = new Car("Toyota Corolla", 180, 14.5);
$car->displayInfo();

$bus = new Bus("School Bus", 120, 10);
$bus->displayInfo();

echo "Current color for all vehicles: " . Vehicle::getColor() . "\n";

Vehicle::setColor("Blue");

echo "New color for all vehicles: " . Vehicle::getColor() . "\n";

$car->displayInfo();
$bus->displayInfo();

?>
